        android:text="4"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="40"
        android:shadowColor="@color/white"
        android:textSize="40sp"
        android:layout_margin="3dp"
        android:paddingVertical="8dp"/>


